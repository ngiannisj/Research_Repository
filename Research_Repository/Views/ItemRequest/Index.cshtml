@using Research_Repository_Utility;

@model IEnumerable< Research_Repository_Models.Item>;

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Requests</h2>
        </div>
    </div>

    <br /><br />

    @if (Model != null && Model.Count() > 0)
    {
<div>
        <button id="submitted-filter-btn" class="selected" onclick="filterProfileItems('@WC.Submitted')">Submitted</button>
        <button id="published-filter-btn" onclick="filterProfileItems('@WC.Published')">Published</button>
        <button id="rejected-filter-btn" onclick="filterProfileItems('@WC.Rejected')">Rejected</button>
    </div>
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    if (obj != null)
                    {
                        <tr class="item" data-status="@obj.Status" style="display:none;">
                            <td width="50%">@obj.Title</td>
                            <td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    @if (obj.Status == WC.Draft || User.IsInRole(WC.LibrarianRole))
                                    {
                                        <a asp-controller="Item" asp-action="Upsert" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                            Edit
                                        </a>
                                        <a asp-controller="Item" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger">
                                            Delete
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Item" asp-action="View" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                            View
                                        </a>
                                    }

                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items exist</p>
    }
</div>

