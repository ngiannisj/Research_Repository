@model Research_Repository_Models.ViewModels.ThemeObjectVM
@using Research_Repository_Utility;

    @{
        var title = "Create Theme";
    }

    <form method="post" enctype="multipart/form-data">
        @if (Model.Theme.Id != 0)
        {
            title = "Edit Theme";
            <input asp-for="Theme.Id" hidden />
        }

        <div class="border p-3">
            <div class="form-group row">
                <h2 class="text-info pl-3">@title</h2>
            </div>

            <div class="row">
                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Theme.Name"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Theme.Name" class="form-control" />
                            <span asp-validation-for="Theme.Name" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-group row">
                        <div class="col-8 offset-4 row">

                            <div class="col">
                                @if (Model.Theme.Id != 0)
                                {
                                    <input type="submit" class="btn btn-info w-100" value="Update" />
                                }
                                else
                                {
                                    <input type="submit" class="btn btn-primary w-100" value="Create" />
                                }
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success w-100">
                                    Back
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 row">
                            @for (int i = 0; i < Model.TagCheckboxes.Count; i++)
                            {
                                <label>@Model.TagCheckboxes[i].Name</label>
                                <input asp-for="@Model.TagCheckboxes[i].CheckedState" />
                                <input asp-for="@Model.TagCheckboxes[i].Value" hidden />
                            }

                        </div>
                        <span asp-validation-for="TagCheckboxes"></span>
                    </div>
                </div>
            </div>
        </div>
    </form>

    @section Scripts {

        @{
            <partial name="_ValidationScriptsPartial" />

        }
    }



