@model Research_Repository_Models.ViewModels.ProfileVM;

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Profile</h2>
        </div>
    </div>

    <br /><br />

    @if (Model.User.Items != null && Model.User.Items.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Action</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.User.Items)
                {
                    if (obj != null)
                    {
                    <tr>
                        <td width="50%">@obj.Title</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Item" asp-action="Upsert" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                    Edit
                                </a>
                                <a asp-controller="Item" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger">
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No drafts exist</p>
    }
<form method="post" enctype="multipart/form-data">
    <div class="form-group row">
        <div class="col-8 row">
            <input asp-for="User.FullName" id="user-name-input" class="form-control" style="display:none;" />
            <div id="user-name-text">@Model.User.FullName</div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-8 row">
            <select asp-items="@Model.TeamSelectList" asp-for="User.TeamId" class="form-control" id="user-team-selector" style="display:none;">
                <option disabled selected value="0">-- Select Team --</option>
            </select>
        </div>
        <div id="user-team-text">@(Model.User.TeamId != null ? Model.User.Team.Name : "No team provided")</div>
    </div>
    <div class="form-group row">
        <div class="col-8 row">
            <input asp-for="User.Role" id="user-role-input" class="form-control" style="display:none;" />
            <div id="user-role-text">@(Model.User.Role != null ? Model.User.Role : "No role provided")</div>
        </div>
    </div>
    <button type="submit" id="profile-edit-btn" class="btn btn-info w-100">Edit</button>
    <input type="submit" id="profile-save-btn" class="btn btn-info w-100" name="save" value="Save" asp-action="SaveProfile" style="display:none;"/>
</form>
</div>

