@model Research_Repository_Models.ViewModels.ProjectVM

@{
    var title = "Create Project";
}

<form method="post" enctype="multipart/form-data">
    @if (Model.Project.Id != 0)
    {
    title = "Edit Project";
    <input asp-for="Project.Id" hidden />
    }

    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Project.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Project.Name" class="form-control" />
                        <span asp-validation-for="Project.Name" class="text-danger"></span>
                    </div>

                </div>


                <div class="form-group row">
                    <div class="col-8 row">
                        <select id="team-selector" asp-for="Project.TeamId" asp-items="@Model.TeamSelectList" class="form-control">
                            <option disabled selected>-- Select Team --</option>
                        </select>
                    </div>
                    <span asp-validation-for="Project.TeamId"></span>
                </div>


                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            @if (Model.Project.Id != 0)
                            {
                                <input type="submit" class="btn btn-info w-100" value="Update" />
                            }
                            else
                            {
                                <input type="submit" class="btn btn-primary w-100" value="Create" />
                            }
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">
                                Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>

@section Scripts {

    @{
<partial name="_ValidationScriptsPartial" />

    }
}
